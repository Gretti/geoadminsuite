<?xml version="1.0" encoding="UTF-8"?>
<web-app id="GeoSIE-Brique" version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3c.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_5.xsd">
    <!-- Application name -->
    <display-name>GEOSIE</display-name>
    <!-- Filter declarations -->
    <filter>
        <filter-name>Encoding Filter</filter-name>
        <filter-class>fr.sie.brique.web.encoding.EncodingFilter</filter-class>
    </filter>
    <!-- Filter mapping -->
    <!-- To force the encoding in UTF-8 -->
    <filter-mapping>
        <filter-name>Encoding Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- Servlets -->
    <servlet>
        <servlet-name>ProxyRedirect</servlet-name>
        <servlet-class>proxy.java.ProxyRedirect</servlet-class>
    </servlet>
    <!-- Impression -->
    <!-- Servlet print MapFish par defaut -->
    <!--	<servlet>-->
    <!--		<servlet-name>print</servlet-name>-->
    <!--		<servlet-class>org.mapfish.print.servlet.MapPrinterServlet</servlet-class>-->
    <!--		<init-param>-->
    <!--			<param-name>config</param-name>-->
    <!--			<param-value>config/print-layout.yaml</param-value>-->
    <!--		</init-param>-->
    <!--	</servlet> -->
    <!-- Servlet print GeoSIE-Brique -->
    <servlet>
        <servlet-name>print</servlet-name>
        <servlet-class>fr.sie.brique.web.print.MapPrinterServletYaml</servlet-class>
        <init-param>
            <param-name>config</param-name>
            <param-value>config/print-layout.yaml</param-value>
        </init-param>
    </servlet>
    <!-- Servlet Edition -->
    <servlet>
        <servlet-name>create</servlet-name>
        <servlet-class>fr.sie.brique.web.edition.CreateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>fr.sie.brique.web.edition.DeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>update</servlet-name>
        <servlet-class>fr.sie.brique.web.edition.UpdateServlet</servlet-class>
    </servlet>
    <!-- Servlet mappings -->
    <servlet>
        <servlet-name>GetOuvrageAttribute</servlet-name>
        <servlet-class>com.magellium.aermc.GetOuvrageAttribute</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProxyRedirect</servlet-name>
        <url-pattern>/proxy</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>print</servlet-name>
        <url-pattern>/print/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>create</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>update</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <!-- Welcome page -->
    <servlet-mapping>
        <servlet-name>GetOuvrageAttribute</servlet-name>
        <url-pattern>/GetOuvrageAttribute</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
